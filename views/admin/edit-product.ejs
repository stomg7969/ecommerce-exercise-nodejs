<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
            method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title"
                    class="<%= validationErrors.find(err => err.param === 'title') ? 'invalid' : '' %>"
                    value="<% if (editing || hasError) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl"
                    class="<%= validationErrors.find(err => err.param === 'imageUrl') ? 'invalid' : '' %>"
                    value="<% if (editing || hasError) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01"
                    class="<%= validationErrors.find(err => err.param === 'price') ? 'invalid' : '' %>"
                    value="<% if (editing || hasError) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" placeholder="Maximum of 400 characters" rows="5"
                    class="<%= validationErrors.find(err => err.param === 'description') ? 'invalid' : '' %>"
                    id="description"><% if (editing || hasError) { %><%= product.description %><% } %></textarea>
            </div>
            <!-- if editing product, I need to pass product id to controller. -->
            <% if (editing) { %>
            <input type="hidden" value="<%= product._id %>" name='productId'>
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add
                Product<% } %></button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>